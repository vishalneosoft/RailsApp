<!DOCTYPE html>
<html>
<head>
  <title>Demotwitter</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<h5 class="notice"><%= notice %></h5>
<h5 class="alert"><%= alert%></h5>

<header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container logo">
        <%= link_to "Twitter App", root_path, id: "logo" %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li><%= link_to root_path do%>
                <i class="glyphicon glyphicon-home"></i>
                  <span>Home</span>
                  <% end %>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle glyphicon glyphicon-th-list" data-toggle="dropdown"></a>
                <ul class="dropdown-menu">
                  <li><%= link_to user_path(current_user) do %>
                    <i class="glyphicon glyphicon-user"></i>
                    <span>My Profile</span>
                    <% end %>
                  </li>
                  <li><%= link_to edit_user_registration_path do %>
                    <i class="glyphicon glyphicon-edit"></i>
                    <span>Edit Profile</span>
                    <% end %>
                  </li>
                  <li><%= link_to destroy_user_session_path, :method => :delete do %>
                    <i class="glyphicon glyphicon-log-out"></i>
                    <span>Logout</span>
                    <% end %>
                  </li>
                </ul>
              </li>
 			      <% end %>
          </ul>
        </nav>
      </div>
    </header>
    <div class="container">
      <%= yield %>
    </div>
</body>
</html>
