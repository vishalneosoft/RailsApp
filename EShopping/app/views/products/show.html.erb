                  <div class="item active">
                    <% @product.pictures.each_with_index do |image,index|%>
                      <% if index>0 && index<=3 %>
                      <%= image_tag(image.avatar.url,size: "85x85", onclick: "show_image('#{image.avatar.url}')") %>
