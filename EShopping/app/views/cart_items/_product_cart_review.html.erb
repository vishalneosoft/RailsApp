<% product_quantity = (cart_item.quantity == cart_item.product.quantity) ? "disabled" : "" %>
<% cart_quantity = cart_item.quantity>1 ? "" : "disabled" %>
<%= link_to '+',cart_item_path(cart_item,quantity_update: "plus",product_id: cart_item.product_id), method: :put, class: "cart_quantity_up btn #{product_quantity}", remote: true %>
<%= number_field_tag :quantity, "#{cart_item.quantity}", min: 1, max: cart_item.product.quantity, product_id: cart_item.product_id, class: 'cart_quantity_input', id: "quantity-update-#{cart_item.id}", remote: true %>
<%= link_to '-', cart_item_path(cart_item,quantity_update: "minus",product_id: cart_item.product_id), method: :put, class: "cart_quantity_down btn #{cart_quantity}", remote: true %>