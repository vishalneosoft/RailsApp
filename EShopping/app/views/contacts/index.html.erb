<% if current_user.admin != true %>
  <div id="contact-page" class="container">
    <div class="bg">
      <div class="row">       
        <div class="col-sm-12">                 
          <h2 class="title text-center">Contact <strong>Us</strong></h2>                                  
          <div id="gmap" class="contact-map">
          </div>
        </div>          
      </div>      
      <div class="row">   
        <div class="col-sm-8">
          <div class="contact-form">
            <h2 class="title text-center">Get In Touch</h2>
            <div class="status alert alert-success" style="display: none"></div>
            <%= render 'contacts/form'%>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="contact-info">
            <h2 class="title text-center">Contact Info</h2>
            <address>
              <p>E-Shopper Inc.</p>
            <p>935 W. Webster Ave New Streets Chicago, IL 60614, NY</p>
            <p>Newyork USA</p>
            <p>Mobile: +2346 17 38 93</p>
            <p>Fax: 1-714-252-0026</p>
            <p>Email: info@e-shopper.com</p>
            </address>
            <div class="social-networks">
              <h2 class="title text-center">Social Networking</h2>
              <ul>
                <li>
                  <a href="#"><i class="fa fa-facebook"></i></a>
                </li>
                <li>
                  <a href="#"><i class="fa fa-twitter"></i></a>
                </li>
                <li>
                  <a href="#"><i class="fa fa-google-plus"></i></a>
                </li>
                <li>
                  <a href="#"><i class="fa fa-youtube"></i></a>
                </li>
              </ul>
            </div>
          </div>
        </div>          
      </div>  
    </div>  
  </div><!--/#contact-page-->
<% else %>
  <div id="contact-page" class="container">
    <div class="bg">
      <div class="row">       
        <div class="col-sm-12">                 
          <h2 class="title text-center">Message</h2><div id="gmap" class="contact-map">
          </div>
          <% if @contacts.present? %>
            <% @contacts.each do |contact| %>
              <div class="panel panel-default">
                <div class="panel-heading">
                  <div class="row">
                    <div class="col-sm-2">
                      <p>Name</p>
                      <p class="paragraph-line"><%= contact.name %></p>
                    </div>
                    <div class="col-sm-4">
                      <p>Email</p>
                      <p class="paragraph-line"><%= contact.email %></p>
                    </div>
                    <div class="col-sm-4">
                      <p>Subject:</p>
                      <p class="paragraph-line"><%= contact.subject.capitalize %></p>
                    </div>
                    <div class="col-sm-2">
                      <p>Message Date</p>
                      <p class="paragraph-line"><%= contact.created_at.strftime("%d %B %Y") %></p>
                    </div>
                  </div>
                </div>
                <div class="panel-body">
                  <div class="row">
                    <h4 style="padding-left: 20px;margin-bottom: -5px;">Message</h4>
                    <div class="panel-body">
                      <div class="col-sm-12 message-content">
                        <%= contact.message %>
                      </div>
                      <div class="col-sm-1" style="padding-left: 0px;">
                        <h4><%= link_to 'REPLY', edit_contact_path(contact), remote: true, class: 'btn btn-width2' %></h4>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          <% else %>
            <section id="cart_items">
              <div class="container">
                <div class="cart_info">
                  <br>
                  <h2 style="text-align: center;">You Have No Message</h2>
                  <br>
                </div>
              </div>
            </section>
          <% end %>
        </div>          
      </div> 
    </div>
  </div>  
<% end %>
<div class="modal fade" id="myModalReply" role="dialog">
  <%= render 'contacts/form_edit' %>
</div>