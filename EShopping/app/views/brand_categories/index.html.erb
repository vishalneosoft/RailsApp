<p id="notice"><%= notice %></p>

<h1>Listing Brand Categories</h1>

<table>
  <thead>
    <tr>
      <th>Brand</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brand_categories.each do |brand_category| %>
      <tr>
        <td><%= brand_category.brand %></td>
        <td><%= brand_category.category %></td>
        <td><%= link_to 'Show', brand_category %></td>
        <td><%= link_to 'Edit', edit_brand_category_path(brand_category) %></td>
        <td><%= link_to 'Destroy', brand_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

