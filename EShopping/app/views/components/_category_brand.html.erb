<div class="category-tab"><!--category-tab-->
  <div class="col-sm-12">
    <ul class="nav nav-tabs">
      <% @subcategories.each_with_index do |subcategory,index| %>
        <li class="<%= "active" if @sub.id == subcategory.id %>">
        <%= link_to subcategory.name,category_brand_path(id: @brand.id,sub_category: subcategory.id) %>
        </li>
      <% end %>   
    </ul>
  </div>
  <% @products = @sub.products & @brand.products %>
  <% @products.each do |product| %>
    <div class="col-sm-3">
      <div class="product-image-wrapper">
        <div class="single-products">
          <div class="productinfo text-center">
            <%= image_tag(product.pictures.find_by(imageable_id: product.id).avatar.url) %>
            <h2>&#8377; <%= product.price%></h2>
            <p style="height: 70px"><%= product.name%></p>
            <%= link_to cart_items_path(product_id: product.id),method: :post, class: 'btn btn-default add-to-cart' do %><i class="fa fa-shopping-cart"> Add to cart</i>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>  
</div><!--/category-tab-->