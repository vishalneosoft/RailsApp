<div class="category-tab"><!--category-tab-->
  <div class="col-sm-12">
    <ul class="nav nav-tabs">
    <% if @sub_categories.present? %>
      <% @sub_categories.each_with_index do |sub_category,index| %>
        <li class="<%= "active" if @sub_category.id == sub_category.id %>">
          <%= link_to sub_category.name,category_path(@category,sub_category: sub_category.id) %>
        </li>
      <% end %>  
    <% end %> 
    </ul>
  </div>
  <% if @products.present? %>
    <% @products.each do |product| %>
      <div class="col-sm-3">
        <div class="product-image-wrapper">
          <div class="single-products" id="single-<%= product.id %>">
            <%= render 'components/category_product', product: product %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="col-sm-12">
      <div class="product-image-wrapper">
        <div class="single-products">
          <br>
          <h2 style="text-align: center;">No Product Available</h1>
          <br>
        </div>
      </div>
    </div>    
  <% end %> 
</div><!--/category-tab-->