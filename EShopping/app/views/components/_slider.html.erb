<section id="slider"><!--slider-->
    <div class="container">
      <div class="row">
        <div class="col-sm-12">
          <div id="slider-carousel" class="carousel slide" data-ride="carousel">  
            <ol class="carousel-indicators">
              <% @banners.each_with_index do |banner, index| %>
                <% if banner.status == "active" %>
                  <li data-target="#slider-carousel" data-slide-to="<%= index %>" class="<%= index == 0 ? 'active' : '' %>"></li>
                <% end %>
              <% end %>
            </ol>
            
            <div class="carousel-inner" role="listbox">
              <% @banners.each_with_index do |banner, index| %>
                <% if banner.status == "active" %>
                  <div class="item <%= index == 0 ? 'active' : '' %>">
                    <div class="col-sm-6">
                      <h1><span>E</span>-SHOPPER</h1>
                      <h2><%= banner.title %></h2>
                      <p><%= banner.content %></p>
                      <button type="button" class="btn btn-default get">Get it now</button>
                    </div>
                    <div class="col-sm-6">
                      <%= image_tag(banner.avatar.url,class: 'girl img-responsive')%>
                      <%= image_tag('home/pricing.png',class: 'pricing')%>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
            
            <a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
              <i class="fa fa-angle-left"></i>
            </a>
            <a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
              <i class="fa fa-angle-right"></i>
            </a>
          </div>
          
        </div>
      </div>
    </div>
  </section><!--/slider-->